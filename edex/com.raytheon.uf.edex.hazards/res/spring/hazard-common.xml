<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="storeHazardHandler"
		class="com.raytheon.uf.edex.hazards.handlers.HazardStorageHandler" />
	<bean factory-bean="handlerRegistry" factory-method="register">
		<constructor-arg
			value="com.raytheon.uf.common.dataplugin.events.hazards.requests.HazardDataStorageRequest" />
		<constructor-arg ref="storeHazardHandler" />
	</bean>

	<bean id="getHazardHandler"
		class="com.raytheon.uf.edex.hazards.handlers.HazardRequestHandler" />
	<bean factory-bean="handlerRegistry" factory-method="register">
		<constructor-arg
			value="com.raytheon.uf.common.dataplugin.events.hazards.requests.HazardRetrieveRequest" />
		<constructor-arg ref="getHazardHandler" />
	</bean>

	<bean id="getHazardEventIdHandler"
		class="com.raytheon.uf.edex.hazards.handlers.HazardEventIdHandler" />
	<bean factory-bean="handlerRegistry" factory-method="register">
		<constructor-arg
			value="com.raytheon.uf.common.dataplugin.events.hazards.requests.HazardEventIdRequest" />
		<constructor-arg ref="getHazardEventIdHandler" />
	</bean>	
</beans>