<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="warningHazardsCreator"
		class="com.raytheon.uf.edex.hazards.warnings.WarningHazardsCreator" 
		depends-on="authFactory" />

	<camelContext id="warningactions-camel" xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler">
		<route id="hazards.warningIngest">
			<from uri="vm:hazards.warningIngest" />
			<bean ref="warningHazardsCreator" method="createHazards" />
		</route>
	</camelContext>

	<camelContext id="practicewarningactions-camel" xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler">
		<route id="hazards.practiceWarningIngest">
			<from uri="jms-generic:topic:edex.alerts.practicewarning" />
			<bean ref="warningHazardsCreator" method="createHazardsFromBytes" />
		</route>
	</camelContext>
</beans>